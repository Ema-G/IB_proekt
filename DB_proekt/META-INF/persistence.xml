<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">

    <class>com.example.bp_proekt.model.Account</class>
    <class>com.example.bp_proekt.model.Article</class>
    <class>com.example.bp_proekt.model.Eshop</class>
    <class>com.example.bp_proekt.model.Product</class>
    <class>com.example.bp_proekt.model.ShoppingCart</class>
    <class>com.example.bp_proekt.model.ShoppingcartHoldsProduct</class>
    <class>com.example.bp_proekt.model.PogledKonKosnicka</class>
    <class>com.example.bp_proekt.model.PogledKonProdavnica</class>
    <class>com.example.bp_proekt.model.PogledKonMagazin</class>
    <properties>
      <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/postgres"/>
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
      <property name="hibernate.connection.username" value="username"/>
      <property name="hibernate.connection.password" value="password"/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
